{% extends "base.html.twig" %}

{% block body %}

<div class="content">
    <div class="container">
        <div class="form-wrapper">
            <div class="login-form-wrapper">
                <div class="login-form-wrapper__logo">
                    <a href="https://www.helium10.com/">
                        <img src="https://members.helium10.com/images/new-logo/2-colors-light-bg.svg" alt="Helium 10">
                    </a>
                </div>
                <h3 class="login-form-wrapper__title">Log In to Helium 10</h3>
                <form id="login-form" class="login-form" action="" method="post">
                    <input type="hidden" name="_csrf"
                        value="nIerJoGFiWnPj__cJ7yh_qxxAiqi3Ic8Niuo0U366g_mv8N508LwXZfHlb5S-M6U30J2WI_s7UVbT8KzPriPWg==">

                    <div class="form-group field-loginform-email required">
                        <label for="loginform-email">Email</label>
                        <input type="text" id="loginform-email" class="form-control" name="LoginForm[email]"
                            placeholder="Please enter your email" required="true" aria-required="true">

                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group field-loginform-password required">
                        <label for="loginform-password">Password</label><input type="password" id="loginform-password"
                            class="form-control" name="LoginForm[password]" placeholder="Please enter your password"
                            aria-required="true">
                        <div class="invalid-feedback"></div>
                        <div class="login-form__forgot"><a href="recovery.html" tabindex="-1">Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-group field-loginform-recaptcha">

                        <input type="hidden" id="loginform-recaptcha" class="form-control" name="LoginForm[reCaptcha]">

                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group field-loginform-rememberme">
                        <div class="custom-control custom-checkbox">
                            <input type="hidden" name="LoginForm[rememberMe]" value="0"><input type="checkbox"
                                id="loginform-rememberme" class="custom-control-input" name="LoginForm[rememberMe]"
                                value="1" checked="">
                            <label class="custom-control-label" for="loginform-rememberme">Remember Me</label>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block">Log In</button>
                    <div class="login-form-bottom">
                        <p class="login-form-bottom__text">New to Helium 10?
                            <a class="login-form-bottom__link" href="signup.html">Sign Up Now</a>
                        </p>
                        <p class="login-form-bottom__text">Problems or questions?
                            <a class="login-form-bottom__link" href="https://helium10.zendesk.com/hc/en-us/requests/new"
                                target="_blank">Contact
                                Us</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <footer class="footer">

        <div class="footer-menu">
            <a href="#PriModal" data-toggle="modal">Privacy Policy</a> |
            <a href="#TermsUseModal" data-toggle="modal">Terms of Use</a> |
            <a href="#EDModal" data-toggle="modal">Earnings Disclaimer</a> |
            <a href="https://www.g2.com/products/helium-10/reviews#reviews" target="_blank">Submit Testimonial</a> |
            <a href="#TRDModal" data-toggle="modal">Testimonials and Results Disclosure</a> |
            <a href="#LegalModal" data-toggle="modal">Legal</a> |
            <a href="https://members.helium10.com/sitemap">Site Map</a></div>
        <div class="footer-copyright">Helium 10 - Copyright 2021 - PixelLabs LLC</div>
    </footer>
</div>

{% endblock %}